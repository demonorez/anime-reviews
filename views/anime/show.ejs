<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <h1?><%= title %></h1>
  <section>
    <div>Title: </div>
    <div>
      <%= anime.title %>
      <a href="/anime/<%= anime._id %>/edit">
        <button>Edit Anime Details</button>
      </a>
    </div>
    <div>Release Year: </div>
    <div><%= anime.releaseYear %></div>
    <div>English Release Year: </div>
    <div><%= anime.englishReleaseYear %></div>
    <div>Cast: </div>
    <div><%= anime.cast.join(', ') %></div>
    <div>English Cast: </div>
    <div><%= anime.englishDubCast.join(', ') %></div>
  </section>
</main>


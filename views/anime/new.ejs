<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/anime/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/anime" method="POST">
    <label for="img-input">ImageURL (Use Imgur links to make it easy)</label>
    <input type="text" name="image">
    <label for="title-input">Title</label>
    <input type="text" name="title" id="title-input">
    <label for="release-year-input">Release Year:</label>
    <input type="text" name="releaseYear" id="release-year-input">
    <label for="english-release-year-input">English Dub Release Year:</label>
    <input type="text" name="englishReleaseYear" id="english-release-year-input">
    <label for="genre-select">Genre:</label>
    <select name="genre" id="genre-select">
      <option value="Action">Action</option>
      <option value="Adventure">Adventure</option>
      <option value="Comedy">Comedy</option>
      <option value="Drama">Drama</option>
      <option value="Fantasy">Fantasy</option>
      <option value="Isekai">Isekai</option>
      <option value="Romance">Romance</option>
      <option value="Sci-fi">Sci-fi</option>
      <option value="Slice of Life">Slice of Life</option>
      <option value="Supernatural">Supernatural</option>
    </select>
    <label for="description-input">Description: </label>
    <input type="text" name="description">
    <button type="submit">Add Anime</button>
  </form>
</main>

<%- include("../partials/footer") %>
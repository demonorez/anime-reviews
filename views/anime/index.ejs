<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <h1>Anime List</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% anime.forEach(anime => { %>
        <tr>
          <td><%= anime.title %></td>
          <td><%= anime.releaseYear %></td>
          <td><a href="/anime/<%= anime._id %>">Details</a></td>
          <td></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

